

uniform sampler2D		tex0;

in vec2 oUv;
in vec4 oColor;

layout(location = 0) out vec4 Frag0;

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------

void main()
{
	vec4 color = texture(tex0, oUv);
	color.rgb *= oColor.rgb;

	Frag0 = color;
}